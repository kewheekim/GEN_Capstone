<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        android:id="@+id/toolbar_go"
        layout="@layout/layout_toolbar_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="어떤 이름으로 불리길\n원하시나요?"
        style="@style/Text.Semibold22"
        android:textColor="@color/black_text"
        app:layout_constraintTop_toBottomOf="@id/toolbar_go"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        />

    <View
        android:id="@+id/et_box"
        android:layout_width="364dp"
        android:layout_height="78dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_go"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="122dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/bg_button_inactive"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="닉네임을 입력해 주세요"
        style="@style/Text.Regular12"
        android:textColor="#757575"
        app:layout_constraintTop_toTopOf="@id/et_box"
        app:layout_constraintStart_toStartOf="@id/et_box"
        android:layout_marginTop="16dp"
        android:layout_marginStart="18dp"
        />


    <EditText
        android:id="@+id/et_nickname"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        style="@style/Text.Medium18"
        android:textColor="@color/black_text"
        android:textColorHint="@color/gray_border"
        android:background="@null"
        android:hint="EX) 랠리"
        app:layout_constraintTop_toTopOf="@id/et_box"
        app:layout_constraintStart_toStartOf="@id/et_box"
        android:layout_marginTop="39dp"
        android:layout_marginStart="18dp"
        />

    <TextView
        android:id="@+id/tv_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="0/12"
        style="@style/Text.Regular12"
        android:textColor="#757575"
        app:layout_constraintTop_toTopOf="@id/et_box"
        app:layout_constraintEnd_toEndOf="@id/et_box"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="18dp"
        />

    <TextView
        android:id="@+id/tv_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        style="@style/Text.Regular12"
        app:layout_constraintTop_toBottomOf="@id/et_box"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="6dp"
        android:layout_marginStart="32dp"
        />

    <include
        layout="@layout/layout_next_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>