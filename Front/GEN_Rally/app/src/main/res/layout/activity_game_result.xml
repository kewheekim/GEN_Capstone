<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.GameResultActivity">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_court"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/bg_court"
            app:layout_constraintTop_toBottomOf="@+id/tv_opponent_name"
            android:layout_marginTop="28dp"/>

        <include
            android:id="@+id/toolbar_go"
            layout="@layout/layout_toolbar_go"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <ImageButton
            android:id="@+id/btn_download"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_download"
            app:layout_constraintTop_toBottomOf="@id/toolbar_go"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"
            />
        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text="4월 14일 경기"
            android:gravity="center"
            android:textColor="@color/black_text"
            android:fontFamily="@font/kimm_bold"
            android:textFontWeight="700"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_go"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_date_type"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="00:50:15"
            android:gravity="center"
            android:textColor="@color/black_text"
            android:fontFamily="@font/kimm_bold"
            android:textFontWeight="700"
            app:layout_constraintTop_toBottomOf="@+id/tv_date"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:textSize="32sp" />
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_map_fill"
            app:layout_constraintTop_toBottomOf="@+id/tv_date_type"
            android:layout_marginTop="6.5dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" />
        <TextView
            android:id="@+id/tv_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_date_type"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="48dp"
            android:gravity="center"
            android:text="망원 다목적 체육관"
            android:textColor="@color/black_text"
            style="@style/Text.Medium14" />

        <!--    경기 점수-->
        <ImageView
            android:id="@+id/iv_opponent_profile"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_default_profile"
            app:cardCornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_place"
            android:layout_marginTop="39dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="26dp"
            android:scaleType="centerCrop" />
        <TextView
            android:id="@+id/tv_opponent_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/iv_opponent_profile"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            app:layout_constraintEnd_toStartOf="@+id/tv_opponent_score"
            android:layout_marginEnd="48dp"
            android:gravity="center"
            android:text="아어려워요"
            android:textColor="@color/gray_text"
            style="@style/Text.Medium12" />
        <TextView
            android:id="@+id/tv_opponent_score"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="0"
            android:gravity="center"
            android:textColor="@color/black_text"
            android:fontFamily="@font/kimm_bold"
            android:textFontWeight="700"
            app:layout_constraintTop_toBottomOf="@+id/tv_place"
            android:layout_marginTop="31dp"
            app:layout_constraintStart_toEndOf="@id/iv_opponent_profile"
            android:layout_marginStart="42dp"
            app:layout_constraintEnd_toStartOf="@id/tv_colon"
            android:layout_marginEnd="42dp"
            android:textSize="56sp" />
        <TextView
            android:id="@+id/tv_colon"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text=":"
            android:gravity="center"
            android:textColor="@color/black_text"
            android:fontFamily="@font/kimm_bold"
            android:textFontWeight="700"
            app:layout_constraintTop_toBottomOf="@+id/tv_place"
            android:layout_marginTop="31dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="56sp" />
        <TextView
            android:id="@+id/tv_user_score"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="2"
            android:gravity="center"
            android:textColor="@color/black_text"
            android:fontFamily="@font/kimm_bold"
            android:textFontWeight="700"
            app:layout_constraintTop_toBottomOf="@+id/tv_place"
            android:layout_marginTop="31dp"
            app:layout_constraintStart_toEndOf="@id/tv_colon"
            android:layout_marginStart="40dp"
            android:textSize="56sp" />
        <ImageView
            android:id="@+id/iv_user_profile"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_default_profile"
            app:cardCornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_place"
            android:layout_marginTop="39dp"
            app:layout_constraintStart_toEndOf="@id/tv_user_score"
            android:layout_marginStart="42dp"
            android:scaleType="centerCrop" />
        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/iv_user_profile"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toEndOf="@id/tv_user_score"
            android:layout_marginStart="42dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"
            android:gravity="center"
            android:text="철통배턴"
            android:textColor="@color/gray_text"
            style="@style/Text.Medium12" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="894dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/iv_court"
            android:background="@color/green_active">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="24dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp"
                android:gravity="center"
                android:text="득점 분포도"
                android:textColor="@color/white"
                style="@style/Text.Semibold22" />
            <android.widget.Button
                style="@style/FlatButton"
                android:id="@+id/btn_set1"
                android:layout_width="70dp"
                android:layout_height="36dp"
                android:background="@drawable/bg_set_button"
                android:text="1세트"
                android:textSize="16sp"
                android:textColor="@color/white"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="65dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp"
                android:fontFamily="@font/pretendard_variable"
                android:textFontWeight="600"
                />
            <android.widget.Button
                style="@style/FlatButton"
                android:id="@+id/btn_set2"
                android:layout_width="70dp"
                android:layout_height="36dp"
                android:background="@drawable/bg_set_button"
                android:text="2세트"
                android:textSize="16sp"
                android:textColor="@color/green_active"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="65dp"
                app:layout_constraintStart_toEndOf="@id/btn_set1"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/pretendard_variable"
                android:textFontWeight="600"
                />
            <android.widget.Button
                style="@style/FlatButton"
                android:id="@+id/btn_set3"
                android:layout_width="70dp"
                android:layout_height="36dp"
                android:background="@drawable/bg_set_button"
                android:text="3세트"
                android:textSize="16sp"
                android:textColor="@color/green_active"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="65dp"
                app:layout_constraintStart_toEndOf="@id/btn_set2"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/pretendard_variable"
                android:textFontWeight="600"
                />
            <ImageView
                android:id="@+id/iv_score_chart"
                android:layout_width="364dp"
                android:layout_height="200dp"
                android:src="@drawable/bg_next_button_inactive"
                app:layout_constraintTop_toBottomOf="@id/btn_set1"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp" />

            <View
                android:id="@+id/divider1"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@color/green_dark"
                app:layout_constraintTop_toBottomOf="@id/iv_score_chart"
                android:layout_marginTop="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/divider1"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp"
                android:gravity="center"
                android:text="활동량 분석"
                android:textColor="@color/white"
                style="@style/Text.Semibold22" />
            <ImageView
                android:id="@+id/iv_heart_rate"
                android:layout_width="364dp"
                android:layout_height="146dp"
                android:src="@drawable/bg_next_button_inactive"
                app:layout_constraintTop_toBottomOf="@id/divider1"
                android:layout_marginTop="57dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_steps"
                android:layout_width="180dp"
                android:layout_height="93dp"
                android:background="@drawable/bg_text_field"
                app:layout_constraintTop_toBottomOf="@id/iv_heart_rate"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp"
                android:paddingVertical="10dp"
                android:paddingHorizontal="16dp">
                <TextView
                    android:id="@+id/tv_steps"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="3, 958"
                    android:gravity="center"
                    android:textColor="@color/black_text"
                    android:fontFamily="@font/kimm_bold"
                    android:textFontWeight="700"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textSize="32sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_steps"
                    app:layout_constraintStart_toStartOf="parent"
                    android:gravity="center"
                    android:text="걸음"
                    android:textColor="@color/gray_text"
                    style="@style/Text.Medium14" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="180dp"
                android:layout_height="93dp"
                android:background="@drawable/bg_text_field"
                app:layout_constraintTop_toBottomOf="@id/iv_heart_rate"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toEndOf="@id/layout_steps"
                android:layout_marginStart="5dp"
                android:paddingVertical="10dp"
                android:paddingHorizontal="16dp">
                <TextView
                    android:id="@+id/tv_calorie"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="210"
                    android:gravity="center"
                    android:textColor="@color/black_text"
                    android:fontFamily="@font/kimm_bold"
                    android:textFontWeight="700"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textSize="32sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_calorie"
                    app:layout_constraintStart_toStartOf="parent"
                    android:gravity="center"
                    android:text="kcal"
                    android:textColor="@color/gray_text"
                    style="@style/Text.Medium14" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@color/green_dark"
                app:layout_constraintTop_toBottomOf="@id/layout_steps"
                android:layout_marginTop="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/divider2"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp"
                android:gravity="center"
                android:text="상대에게 받은 칭찬"
                android:textColor="@color/white"
                style="@style/Text.Semibold22" />
            <TextView
                android:id="@+id/tv_compliment"
                android:layout_width="364dp"
                android:layout_height="140dp"
                android:text="단식 경기했는데, 정말 매너 최고였습니다! 인아웃 판정이나 경기 흐름에서도 늘 배려해 주셔서 즐겁게 집중할 수 있었어요. 이런 분과 경기하면 승패와 상관없이 기분이 좋네요 :)"
                app:layout_constraintTop_toBottomOf="@+id/divider2"
                android:layout_margin="57dp"
                android:layout_marginBottom="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:padding="16dp"
                android:background="@drawable/bg_text_field"
                android:textColor="@color/black_text"
                style="@style/Text.Regular14"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>