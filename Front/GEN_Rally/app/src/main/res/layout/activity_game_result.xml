<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.GameResultActivity"
    android:fitsSystemWindows="true">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_court"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/bg_court"
                app:layout_constraintTop_toBottomOf="@+id/layout_set3"
                android:layout_marginTop="28dp"/>

            <include
                android:id="@+id/toolbar_go"
                layout="@layout/layout_toolbar_go"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
            <ImageButton
                android:id="@+id/btn_download"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_download"
                app:layout_constraintTop_toBottomOf="@id/toolbar_go"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="24dp"
                android:background="@android:color/transparent" />
            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4월 14일 경기"
                android:gravity="center"
                android:textColor="@color/gray_800"
                android:fontFamily="@font/kimm_bold"
                android:textFontWeight="700"
                app:layout_constraintTop_toBottomOf="@+id/toolbar_go"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp"
                android:textSize="28sp"/>
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_map_fill"
                app:layout_constraintTop_toBottomOf="@+id/tv_date"
                android:layout_marginTop="6.5dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp" />
            <TextView
                android:id="@+id/tv_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tv_date"
                android:layout_marginTop="4dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="48dp"
                android:gravity="center"
                android:text="망원 다목적 체육관"
                android:textColor="@color/gray_800"
                style="@style/Text.Medium14" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tv_place"
                android:layout_marginTop="39dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp"
                android:gravity="center"
                android:orientation="vertical"
                >
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/iv_opponent_profile"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/profile_image_male"
                    android:scaleType="centerCrop"
                    android:layout_marginBottom="4dp"
                    app:shapeAppearanceOverlay="@style/RoundedProfileImage10dp"/>
                <TextView
                    android:id="@+id/tv_opponent_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="아어려워요"
                    android:textColor="@color/gray_600"
                    style="@style/Text.Medium12" />
            </LinearLayout>


            <TextView
                android:id="@+id/tv_opponent_score"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:text=""
                android:gravity="center"
                android:textColor="@color/gray_800"
                android:fontFamily="@font/kimm_bold"
                android:textFontWeight="700"
                app:layout_constraintTop_toBottomOf="@+id/tv_place"
                android:layout_marginTop="31dp"
                app:layout_constraintEnd_toStartOf="@id/tv_colon"
                android:layout_marginEnd="42dp"
                android:textSize="56sp" />
            <TextView
                android:id="@+id/tv_colon"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:text=":"
                android:gravity="center"
                android:textColor="@color/gray_800"
                android:fontFamily="@font/kimm_bold"
                android:textFontWeight="700"
                app:layout_constraintTop_toBottomOf="@+id/tv_place"
                android:layout_marginTop="31dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="56sp" />
            <TextView
                android:id="@+id/tv_user_score"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:text=""
                android:gravity="center"
                android:textColor="@color/gray_800"
                android:fontFamily="@font/kimm_bold"
                android:textFontWeight="700"
                app:layout_constraintTop_toBottomOf="@+id/tv_place"
                android:layout_marginTop="31dp"
                app:layout_constraintStart_toEndOf="@id/tv_colon"
                android:layout_marginStart="40dp"
                android:textSize="56sp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tv_place"
                android:layout_marginTop="39dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="24dp"
                android:gravity="center"
                android:orientation="vertical"
                >
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/iv_user_profile"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_default_profile"
                    android:layout_marginBottom="4dp"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/RoundedProfileImage10dp"/>
                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="철통배턴"
                    android:textColor="@color/gray_600"
                    style="@style/Text.Medium12" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:text="00:50:15"
                android:gravity="center"
                android:textColor="@color/gray_800"
                android:fontFamily="@font/kimm_bold"
                android:textFontWeight="700"
                app:layout_constraintTop_toBottomOf="@+id/tv_opponent_score"
                android:layout_marginTop="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/tv_set1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1세트"
                app:layout_constraintTop_toBottomOf="@id/tv_time"
                android:layout_marginTop="29dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                style="@style/Text.Medium14" />

            <TextView
                android:id="@+id/tv_opponent_score1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21"
                app:layout_constraintTop_toBottomOf="@id/tv_time"
                android:layout_marginTop="27dp"
                app:layout_constraintEnd_toStartOf="@id/tv_set1"
                android:layout_marginEnd="104dp"
                style="@style/Text.Semibold18"
                android:textColor="@color/gray_800"/>
            <TextView
                android:id="@+id/tv_my_score1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18"
                app:layout_constraintTop_toBottomOf="@id/tv_time"
                android:layout_marginTop="27dp"
                app:layout_constraintStart_toEndOf="@id/tv_set1"
                android:layout_marginStart="104dp"
                style="@style/Text.Semibold18"
                android:textColor="@color/gray_800"/>
            <TextView
                android:id="@+id/tv_time1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:15:12"
                app:layout_constraintTop_toBottomOf="@id/tv_time"
                android:layout_marginTop="53dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                style="@style/Text.Medium14"
                android:textColor="@color/gray_600"/>

            <com.example.rally.ui.ScoreBarView
                android:id="@+id/sb_opponent1"
                android:layout_width="109dp"
                android:layout_height="12dp"
                app:maxValue="21"
                app:value="19"
                app:bgColor="@color/gray_200"
                app:barColor="@color/gray_border"
                app:fillFromRight="true"
                app:roundLeft="true"
                app:roundRight="false"
                app:cornerRadius="10dp"
                app:layout_constraintTop_toBottomOf="@id/tv_time"
                android:layout_marginTop="58dp"
                app:layout_constraintEnd_toStartOf="@id/tv_time1"
                android:layout_marginEnd="4dp"/>

            <com.example.rally.ui.ScoreBarView
                android:id="@+id/sb_user1"
                android:layout_width="109dp"
                android:layout_height="12dp"
                app:maxValue="21"
                app:value="18"
                app:bgColor="@color/gray_200"
                app:barColor="@color/green_active"
                app:fillFromRight="false"
                app:roundLeft="false"
                app:roundRight="true"
                app:cornerRadius="10dp"
                app:layout_constraintTop_toBottomOf="@id/tv_time"
                android:layout_marginTop="58dp"
                app:layout_constraintStart_toEndOf="@id/tv_time1"
                android:layout_marginStart="4dp"/>


            <TextView
                android:id="@+id/tv_set2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2세트"
                app:layout_constraintTop_toBottomOf="@id/tv_time1"
                android:layout_marginTop="17dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                style="@style/Text.Medium14" />
            <TextView
                android:id="@+id/tv_opponent_score2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21"
                app:layout_constraintTop_toBottomOf="@id/tv_time1"
                android:layout_marginTop="17dp"
                app:layout_constraintEnd_toStartOf="@id/tv_set2"
                android:layout_marginEnd="104dp"
                style="@style/Text.Semibold18"
                android:textColor="@color/gray_800"/>
            <TextView
                android:id="@+id/tv_my_score2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18"
                app:layout_constraintTop_toBottomOf="@id/tv_time1"
                android:layout_marginTop="17dp"
                app:layout_constraintStart_toEndOf="@id/tv_set2"
                android:layout_marginStart="104dp"
                style="@style/Text.Semibold18"
                android:textColor="@color/gray_800"/>

            <TextView
                android:id="@+id/tv_time2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:15:12"
                app:layout_constraintTop_toBottomOf="@id/tv_set2"
                android:layout_marginTop="3dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                style="@style/Text.Medium14"
                android:textColor="@color/gray_600"/>

            <com.example.rally.ui.ScoreBarView
                android:id="@+id/sb_opponent2"
                android:layout_width="109dp"
                android:layout_height="12dp"
                app:maxValue="21"
                app:value="19"
                app:bgColor="@color/gray_200"
                app:barColor="@color/gray_border"
                app:fillFromRight="true"
                app:roundLeft="true"
                app:roundRight="false"
                app:cornerRadius="10dp"
                app:layout_constraintTop_toBottomOf="@id/tv_set2"
                android:layout_marginTop="7dp"
                app:layout_constraintEnd_toStartOf="@id/tv_time2"
                android:layout_marginEnd="4dp"/>

            <com.example.rally.ui.ScoreBarView
                android:id="@+id/sb_user2"
                android:layout_width="109dp"
                android:layout_height="12dp"
                app:maxValue="21"
                app:value="18"
                app:bgColor="@color/gray_200"
                app:barColor="@color/green_active"
                app:fillFromRight="false"
                app:roundLeft="false"
                app:roundRight="true"
                app:cornerRadius="10dp"
                app:layout_constraintTop_toBottomOf="@id/tv_set2"
                android:layout_marginTop="7dp"
                app:layout_constraintStart_toEndOf="@id/tv_time2"
                android:layout_marginStart="4dp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_set3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tv_time2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <TextView
                    android:id="@+id/tv_set3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3세트"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="17dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    style="@style/Text.Medium14" />
                <TextView
                    android:id="@+id/tv_opponent_score3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="21"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="17dp"
                    app:layout_constraintEnd_toStartOf="@id/tv_set3"
                    android:layout_marginEnd="104dp"
                    style="@style/Text.Semibold18"
                    android:textColor="@color/gray_800"/>
                <TextView
                    android:id="@+id/tv_my_score3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="17dp"
                    app:layout_constraintStart_toEndOf="@id/tv_set3"
                    android:layout_marginStart="104dp"
                    style="@style/Text.Semibold18"
                    android:textColor="@color/gray_800"/>

                <TextView
                    android:id="@+id/tv_time3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:15:12"
                    app:layout_constraintTop_toBottomOf="@id/tv_set3"
                    android:layout_marginTop="3dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    style="@style/Text.Medium14"
                    android:textColor="@color/gray_600"/>

                <com.example.rally.ui.ScoreBarView
                    android:id="@+id/sb_opponent3"
                    android:layout_width="109dp"
                    android:layout_height="12dp"
                    app:maxValue="21"
                    app:value="19"
                    app:bgColor="@color/gray_200"
                    app:barColor="@color/gray_border"
                    app:fillFromRight="true"
                    app:roundLeft="true"
                    app:roundRight="false"
                    app:cornerRadius="10dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_set3"
                    android:layout_marginTop="7dp"
                    app:layout_constraintEnd_toStartOf="@id/tv_time3"
                    android:layout_marginEnd="4dp"/>

                <com.example.rally.ui.ScoreBarView
                    android:id="@+id/sb_user3"
                    android:layout_width="109dp"
                    android:layout_height="12dp"
                    app:maxValue="21"
                    app:value="18"
                    app:bgColor="@color/gray_200"
                    app:barColor="@color/green_active"
                    app:fillFromRight="false"
                    app:roundLeft="false"
                    app:roundRight="true"
                    app:cornerRadius="10dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_set3"
                    android:layout_marginTop="7dp"
                    app:layout_constraintStart_toEndOf="@id/tv_time3"
                    android:layout_marginStart="4dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/iv_court"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@color/green_active"
                android:paddingBottom="55dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="24dp"
                    android:gravity="center"
                    android:text="활동량 분석"
                    android:textColor="@color/white"
                    style="@style/Text.Semibold22" />
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_hr"
                    android:layout_width="364dp"
                    android:layout_height="106dp"
                    android:background="@drawable/bg_set_button"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="56dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:paddingHorizontal="18dp"
                    android:paddingVertical="12dp">
                    <TextView
                        android:id="@+id/tv_hr_max"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:text="184"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:fontFamily="@font/kimm_bold"
                        android:textFontWeight="700"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:textSize="32sp" />
                    <TextView
                        android:id="@+id/tv_hr_min"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/ 94"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:fontFamily="@font/kimm_bold"
                        android:textFontWeight="700"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="16dp"
                        app:layout_constraintStart_toEndOf="@id/tv_hr_max"
                        android:layout_marginStart="5dp"
                        android:textSize="20sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tv_hr_max"
                        app:layout_constraintStart_toStartOf="parent"
                        android:gravity="center"
                        android:text="bpm"
                        android:textColor="@color/gray_border"
                        style="@style/Text.Medium14" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/series_hr"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="12dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="16dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_steps"
                    android:layout_width="178dp"
                    android:layout_height="94dp"
                    android:background="@drawable/bg_set_button"
                    app:layout_constraintTop_toBottomOf="@id/layout_hr"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="24dp"
                    android:paddingHorizontal="18dp"
                    android:paddingVertical="12dp">
                    <TextView
                        android:id="@+id/tv_steps"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:text="3,958"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:fontFamily="@font/kimm_bold"
                        android:textFontWeight="700"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:textSize="32sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tv_steps"
                        app:layout_constraintStart_toStartOf="parent"
                        android:gravity="center"
                        android:text="걸음"
                        android:textColor="@color/gray_border"
                        style="@style/Text.Medium14" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="178dp"
                    android:layout_height="94dp"
                    android:background="@drawable/bg_set_button"
                    app:layout_constraintTop_toBottomOf="@id/layout_hr"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="210dp"
                    android:paddingHorizontal="18dp"
                    android:paddingVertical="12dp">
                    <TextView
                        android:id="@+id/tv_calorie"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:text="210"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:fontFamily="@font/kimm_bold"
                        android:textFontWeight="700"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:textSize="32sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tv_calorie"
                        app:layout_constraintStart_toStartOf="parent"
                        android:gravity="center"
                        android:text="kcal"
                        android:textColor="@color/gray_border"
                        style="@style/Text.Medium14" />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/layout_steps"
                    android:layout_marginTop="24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="24dp"
                    android:gravity="center"
                    android:text="상대에게 받은 칭찬"
                    android:textColor="@color/white"
                    style="@style/Text.Semibold22" />
                <TextView
                    android:id="@+id/tv_compliment"
                    android:layout_width="364dp"
                    android:layout_height="wrap_content"
                    android:text="단식 경기했는데, 정말 매너 최고였습니다! 인아웃 판정이나 경기 흐름에서도 늘 배려해 주셔서 즐겁게 집중할 수 있었어요. 이런 분과 경기하면 승패와 상관없이 기분이 좋네요 :)"
                    app:layout_constraintTop_toBottomOf="@+id/layout_steps"
                    android:layout_marginTop="64dp"
                    android:layout_marginBottom="24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:padding="16dp"
                    android:background="@drawable/bg_set_button"
                    android:textColor="@color/white"
                    style="@style/Text.Regular14" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>