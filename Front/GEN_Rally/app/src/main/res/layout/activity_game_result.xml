<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.GameResultActivity"
    android:fitsSystemWindows="true"
    android:background="@color/green_active">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="경기 종료!"
        android:textColor="@color/white"
        android:fontFamily="@font/kimm_bold"
        android:textFontWeight="700"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="48sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="경기를 함께한 상대의 매너를 평가하고 칭찬해\n경기 결과를 확인해보세요!"
        android:textColor="@color/white"
        android:fontFamily="@font/pretendard_variable"
        android:textFontWeight="700"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="349dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="20sp"
        />
    <android.widget.Button
        android:id="@+id/btn_next"
        style="@style/FlatButton"
        android:layout_width="364dp"
        android:layout_height="54dp"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="상대 평가하기"
        android:textSize="16sp"
        android:textColor="@color/green_active"
        android:background="@drawable/bg_view_active2" />

</androidx.constraintlayout.widget.ConstraintLayout>