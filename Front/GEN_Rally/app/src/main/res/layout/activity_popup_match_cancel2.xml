<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="352dp"
    android:layout_height="320dp"
    app:cardCornerRadius="16dp"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="0dp"
    android:layout_gravity="center"
    android:background="@android:color/transparent"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="22dp">

        <ImageButton
            android:id="@+id/btn_x"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_x"
            android:contentDescription="x"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_warning_triangle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="정말 매칭을 취소하시겠어요?"
            android:textColor="@color/gray_800"
            style="@style/Text.Semibold18"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="96dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="취소하게 되면 신청했던 매칭 정보는\n모두 초기화돼요."
            android:textColor="@color/gray_600"
            style="@style/Text.Medium18"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="142dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <android.widget.Button
            android:id="@+id/btn_back"
            android:layout_width="148dp"
            android:layout_height="54dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="돌아가기"
            style="@style/Text.Medium18"
            android:textColor="#AAAAAA"
            android:background="@drawable/bg_selector_radio_button"
            android:stateListAnimator="@null"/>

        <android.widget.Button
            android:id="@+id/btn_cancel"
            android:layout_width="148dp"
            android:layout_height="54dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_back"
            android:layout_marginStart="8dp"
            android:text="취소하기"
            style="@style/Text.Medium18"
            android:textColor="@color/gray_600"
            android:background="@drawable/bg_next_button_inactive"
            android:stateListAnimator="@null"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>