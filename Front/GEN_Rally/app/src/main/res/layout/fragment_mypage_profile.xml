<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="?attr/colorSurface"
        android:paddingHorizontal="10dp"
        android:paddingVertical="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_back_arrow"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="프로필 수정"
            style="@style/Text.Semibold18"
            android:gravity="center_vertical"
            />
    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_default_profile"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_400"
        android:text="사진 바꾸기"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="118dp"
        style="@style/Text.Medium14"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="닉네임"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="147dp"
        android:layout_marginStart="24dp"
        style="@style/Text.Medium16"
        />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="364dp"
        android:layout_height="52dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="179dp"
        android:layout_marginStart="24dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:strokeWidth="1dp"
        app:cardBackgroundColor="@color/gray_100"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="철통배턴"
                style="@style/Text.Regular16"
                android:textColor="@color/gray_400"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="15dp"
                android:layout_marginStart="18dp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="275dp"
        android:layout_marginStart="24dp"
        style="@style/Text.Medium16"
        />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="364dp"
        android:layout_height="52dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="307dp"
        android:layout_marginStart="24dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:strokeWidth="1dp"
        app:cardBackgroundColor="@color/gray_100"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ct7778"
                style="@style/Text.Regular16"
                android:textColor="@color/gray_400"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="15dp"
                android:layout_marginStart="18dp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="379dp"
        android:layout_marginStart="24dp"
        style="@style/Text.Medium16"
        />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="364dp"
        android:layout_height="52dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="411dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/bg_text_field"
        android:inputType="textPassword"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="성별"
        app:layout_constraintTop_toBottomOf="@id/et_password"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="24dp"
        style="@style/Text.Medium16"
        />
    
    <android.widget.Button
        android:layout_width="178dp"
        android:layout_height="52dp"
        app:layout_constraintTop_toBottomOf="@id/et_password"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="62dp"
        android:layout_marginStart="24dp"
        style="@style/FlatButton"
        android:background="@drawable/bg_view_active"
        android:text="남성"
        android:textColor="@color/green_active"
        android:textSize="16sp"
        />

    <android.widget.Button
        android:layout_width="178dp"
        android:layout_height="52dp"
        app:layout_constraintTop_toBottomOf="@id/et_password"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="62dp"
        android:layout_marginStart="210dp"
        style="@style/FlatButton"
        android:background="@drawable/bg_button_inactive"
        android:text="여성"
        android:textColor="@color/gray_400"
        android:textSize="16sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="선호 매칭"
        app:layout_constraintTop_toBottomOf="@id/et_password"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="134dp"
        android:layout_marginStart="24dp"
        style="@style/Text.Medium16"
        />

    <android.widget.Button
        android:layout_width="116dp"
        android:layout_height="52dp"
        app:layout_constraintTop_toBottomOf="@id/et_password"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="166dp"
        android:layout_marginStart="24dp"
        style="@style/FlatButton"
        android:background="@drawable/bg_view_active"
        android:text="비슷한 실력"
        android:textColor="@color/green_active"
        android:textSize="16sp"
        />

    <android.widget.Button
        android:layout_width="116dp"
        android:layout_height="52dp"
        app:layout_constraintTop_toBottomOf="@id/et_password"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="166dp"
        android:layout_marginStart="148dp"
        style="@style/FlatButton"
        android:background="@drawable/bg_button_inactive"
        android:text="가까운 위치"
        android:textColor="@color/gray_400"
        android:textSize="16sp"
        />

    <android.widget.Button
        android:layout_width="116dp"
        android:layout_height="52dp"
        app:layout_constraintTop_toBottomOf="@id/et_password"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="166dp"
        android:layout_marginStart="272dp"
        style="@style/FlatButton"
        android:background="@drawable/bg_button_inactive"
        android:text="시간대"
        android:textColor="@color/gray_400"
        android:textSize="16sp"
        />

    <android.widget.Button
        android:layout_width="116dp"
        android:layout_height="52dp"
        app:layout_constraintTop_toBottomOf="@id/et_password"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="226dp"
        android:layout_marginStart="24dp"
        style="@style/FlatButton"
        android:background="@drawable/bg_button_inactive"
        android:text="경기 스타일"
        android:textColor="@color/gray_400"
        android:textSize="16sp"
        />

    <android.widget.Button
        android:id="@+id/btn_finish"
        style="@style/FlatButton"
        android:layout_width="364dp"
        android:layout_height="54dp"
        android:text="저장하기"
        android:background="@drawable/bg_next_button_active"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="32dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>