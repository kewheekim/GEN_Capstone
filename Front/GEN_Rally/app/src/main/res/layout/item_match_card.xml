<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="364dp"
    android:layout_height="280dp"
    android:layout_margin="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/gray_border">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24dp"
        >
        <LinearLayout
            android:id="@+id/chip_status"
            android:layout_width="90dp"
            android:layout_height="34dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_next_button_inactive"
            android:gravity="center"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="요청 보류 중"
                android:textSize="14sp"
                android:textColor="@color/black_text" />
        </LinearLayout>

        <!-- 상단 마감일 -->
        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/ic_circle"
            app:layout_constraintLeft_toRightOf="@+id/chip_status"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="36dp"
            android:layout_marginStart="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="매칭 마감까지 D-5"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/green_active"
            app:layout_constraintLeft_toRightOf="@+id/chip_status"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp"
            android:layout_marginStart="30dp"/>

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="5월 3일(토)"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@id/chip_status"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"/>

        <View
            android:layout_width="316dp"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="19dp"
            android:background="@color/gray_border"
            app:layout_constraintTop_toBottomOf="@id/tv_date"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- 정보 아이템: 시간, 장소, 경기 형태 -->
        <LinearLayout
            android:id="@+id/ll_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/tv_date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp"
            android:weightSum="3">

            <!-- 희망 시간 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="희망 시간"
                    android:textSize="12sp"
                    android:textColor="#9F9F9F"/>

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="19:00~21:00"
                    android:textSize="14sp"
                    android:textColor="@color/black_text"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>

            <!-- 희망 장소 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="희망 장소"
                    android:textSize="12sp"
                    android:textColor="#9F9F9F"/>

                <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="망원 다목적 체육관"
                    android:textSize="14sp"
                    android:textColor="@color/black_text"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>

            <!-- 경기 형태 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="경기 형태"
                    android:textSize="12sp"
                    android:textColor="#9F9F9F"/>

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="단식"
                    android:textSize="14sp"
                    android:textColor="@color/black_text"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- 버튼 그룹 -->
        <LinearLayout
            android:id="@+id/ll_buttons"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/ll_info"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center">

            <android.widget.Button
                style="@style/FlatButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="신청 취소"
                android:textSize="16sp"
                android:textStyle="bold"
                android:enabled="false"
                android:background="@drawable/bg_next_button_inactive"/>

            <android.widget.Button
                style="@style/FlatButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="후보 확인하기"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/bg_next_button_active"
                />
        </LinearLayout>

        <!-- 하단 안내 텍스트 -->
        <TextView
            android:id="@+id/tv_footer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="추천 상대 업데이트까지 47:00 남음"
            android:textSize="12sp"
            android:textColor="#757575"
            android:gravity="center"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@id/ll_buttons"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
