<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:background="@color/bg_default">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="함께 경기했던 상대는 어땠나요?"
                android:textColor="@color/black_text"
                android:fontFamily="@font/pretendard_regular"
                android:textFontWeight="700"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="25dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp"
                android:textSize="22sp"
                android:lineHeight="36sp"
                />
            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="좋았던 점이나 아쉬웠던 점을 자유롭게 선택해 주세요"
                android:textColor="@color/gray_text"
                android:fontFamily="@font/pretendard_regular"
                android:textFontWeight="700"
                app:layout_constraintTop_toBottomOf="@id/tv_title"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp"
                android:textSize="14sp"
                android:lineHeight="36sp"
                />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_profile"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:src="@drawable/profile_image_male"
                app:layout_constraintTop_toBottomOf="@id/tv_content"
                android:layout_marginTop="40dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:shapeAppearanceOverlay="@style/RoundedProfileImage"
                />
            <TextView
                android:id="@+id/tv_opponent_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아어려워요"
                app:layout_constraintTop_toBottomOf="@+id/iv_profile"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="14sp"
                android:fontFamily="@font/pretendard_semibold"
                />

            <RatingBar
                android:id="@+id/rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="0.5"
                android:rating="0"
                style="@style/MyCustomRatingBar2"
                app:layout_constraintTop_toBottomOf="@+id/tv_opponent_name"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_compliment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded_top"
                app:layout_constraintTop_toBottomOf="@+id/rating_bar"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:outlineSpotShadowColor="@color/gray_inactive">
                <TextView
                    android:id="@+id/tv_tiltle_compliment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="24dp"
                    android:text="남기고 싶은 칭찬 한마디"
                    android:textColor="@color/black_text"
                    android:textSize="18sp"
                    android:fontFamily="@font/pretendard_semibold"/>
                <EditText
                    android:id="@+id/et_compliment"
                    android:layout_width="364dp"
                    android:layout_height="115dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_tiltle_compliment"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@drawable/bg_next_button_inactive"
                    android:hint="  건강한 배드민턴 문화를 위해, 욕설이나 비방은 삼가주세요."
                    android:fontFamily="@font/pretendard_medium"
                    android:textSize="14sp"
                    android:padding="17dp"
                    android:gravity="start"
                    />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:layout_constraintTop_toBottomOf="@id/et_compliment"
                    android:layout_marginTop="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="24dp"
                    android:src="@drawable/ic_smile"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/et_compliment"
                    android:layout_marginTop="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="56dp"
                    android:text="이런 점을 칭찬해요"
                    android:textColor="@color/black_text"
                    android:textSize="18sp"
                    android:fontFamily="@font/pretendard_semibold"/>

                <TextView
                    android:id="@+id/tv_compliment1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/et_compliment"
                    android:layout_marginTop="72dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="44dp"
                    android:text="경기 전후 인사하며 맞이해줬어요"
                    android:textColor="@color/black_text"
                    android:textSize="16sp"
                    android:fontFamily="@font/pretendard_medium" />
                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/cb_compliment1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/et_compliment"
                    android:layout_marginTop="60dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="336dp"
                    android:button="@drawable/custom_checkbox" />
                <View
                    android:layout_width="348dp"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_compliment1"
                    android:layout_marginTop="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@color/gray_inactive"
                    />

                <TextView
                    android:id="@+id/tv_compliment2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_compliment1"
                    android:layout_marginTop="42dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="44dp"
                    android:text="경기 시간에 늦지 않고 제때 왔어요"
                    android:textColor="@color/black_text"
                    android:textSize="16sp"
                    android:fontFamily="@font/pretendard_medium" />
                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/cb_compliment2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_compliment1"
                    android:layout_marginTop="30dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="336dp"
                    android:button="@drawable/custom_checkbox" />
                <View
                    android:layout_width="348dp"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_compliment2"
                    android:layout_marginTop="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@color/gray_inactive"
                    />

                <TextView
                    android:id="@+id/tv_compliment3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_compliment2"
                    android:layout_marginTop="42dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="44dp"
                    android:text="내가 득점할 때 칭찬을 해줬어요"
                    android:textColor="@color/black_text"
                    android:textSize="16sp"
                    android:fontFamily="@font/pretendard_medium" />
                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/cb_compliment3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_compliment2"
                    android:layout_marginTop="30dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="336dp"
                    android:button="@drawable/custom_checkbox" />
                <View
                    android:layout_width="348dp"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_compliment3"
                    android:layout_marginTop="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@color/gray_inactive"
                    />

                <TextView
                    android:id="@+id/tv_compliment4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_compliment3"
                    android:layout_marginTop="42dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="44dp"
                    android:text="셔틀콕을 안정적으로 잘 전달해줬어요"
                    android:textColor="@color/black_text"
                    android:textSize="16sp"
                    android:fontFamily="@font/pretendard_medium" />
                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/cb_compliment4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_compliment3"
                    android:layout_marginTop="30dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="336dp"
                    android:button="@drawable/custom_checkbox" />
                <View
                    android:layout_width="348dp"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_compliment4"
                    android:layout_marginTop="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@color/gray_inactive"
                    />

                <TextView
                    android:id="@+id/tv_compliment5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_compliment4"
                    android:layout_marginTop="42dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="44dp"
                    android:text="경기 후 코트를 깔끔하게 정리했어요"
                    android:textColor="@color/black_text"
                    android:textSize="16sp"
                    android:fontFamily="@font/pretendard_medium" />
                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/cb_compliment5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_compliment4"
                    android:layout_marginTop="30dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="336dp"
                    android:button="@drawable/custom_checkbox" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="471dp"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/layout_compliment"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="17dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="24dp"
                android:src="@drawable/ic_bad"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="17dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="56dp"
                android:text="이런 점은 아쉬워요"
                android:textColor="@color/black_text"
                android:textSize="18sp"
                android:fontFamily="@font/pretendard_semibold"/>

            <TextView
                android:id="@+id/tv_problem1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="72dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="44dp"
                android:text="점수 판정을 존중하지 않고 불평했어요"
                android:textColor="@color/black_text"
                android:textSize="16sp"
                android:fontFamily="@font/pretendard_medium" />
            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/cb_problem1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="60dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="336dp"
                android:button="@drawable/custom_checkbox" />
            <View
                android:layout_width="348dp"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@id/tv_problem1"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@color/gray_inactive"
                />

            <TextView
                android:id="@+id/tv_problem2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_problem1"
                android:layout_marginTop="42dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="44dp"
                android:text="셔틀콕으로 맞히고 사과하지 않았어요"
                android:textColor="@color/black_text"
                android:textSize="16sp"
                android:fontFamily="@font/pretendard_medium" />
            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/cb_problem2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_problem1"
                android:layout_marginTop="30dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="336dp"
                android:button="@drawable/custom_checkbox" />
            <View
                android:layout_width="348dp"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@id/tv_problem2"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@color/gray_inactive"
                />
            <TextView
                android:id="@+id/tv_problem3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_problem2"
                android:layout_marginTop="42dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="44dp"
                android:text="셔틀콕을 줍지 않고 상대에게 떠넘겼어요"
                android:textColor="@color/black_text"
                android:textSize="16sp"
                android:fontFamily="@font/pretendard_medium" />
            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/cb_problem3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_problem2"
                android:layout_marginTop="30dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="336dp"
                android:button="@drawable/custom_checkbox" />
            <View
                android:layout_width="348dp"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@id/tv_problem3"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@color/gray_inactive"
                />
            <TextView
                android:id="@+id/tv_problem4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_problem3"
                android:layout_marginTop="42dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="44dp"
                android:text="경기 중 불필요한 욕설과 과한 행동을 했어요"
                android:textColor="@color/black_text"
                android:textSize="16sp"
                android:fontFamily="@font/pretendard_medium" />
            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/cb_problem4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_problem3"
                android:layout_marginTop="30dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="336dp"
                android:button="@drawable/custom_checkbox" />
            <View
                android:layout_width="348dp"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@id/tv_problem4"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@color/gray_inactive"
                />
            <TextView
                android:id="@+id/tv_problem5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_problem4"
                android:layout_marginTop="42dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="44dp"
                android:text="경기 후 뒷정리에 참여하지 않았어요"
                android:textColor="@color/black_text"
                android:textSize="16sp"
                android:fontFamily="@font/pretendard_medium" />
            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/cb_problem5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_problem4"
                android:layout_marginTop="30dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="336dp"
                android:button="@drawable/custom_checkbox" />
        </androidx.constraintlayout.widget.ConstraintLayout>
            <android.widget.Button
                android:id="@+id/btn_next"
                style="@style/FlatButton"
                android:layout_width="364dp"
                android:layout_height="54dp"
                android:text="목표 달성 확인하기"
                android:background="@drawable/bg_next_button_inactive"
                android:textColor="@color/gray_nav_bar"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="5dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>