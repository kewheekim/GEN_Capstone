<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

        <!-- 상단 툴바 -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:background="?attr/colorSurface"
            android:paddingHorizontal="10dp"
            android:paddingVertical="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

                <ImageButton
                    android:id="@+id/btn_back"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_back_arrow"
                    android:background="?attr/selectableItemBackgroundBorderless"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="경기 약속"
                    style="@style/Text.Semibold20"
                    android:layout_gravity="center"
                    />

        </androidx.appcompat.widget.Toolbar>

        <!--프로필 사진-->
        <ImageView
            android:id="@+id/iv_profile"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:src="@drawable/ic_default_profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            android:layout_marginTop="17dp"
            android:layout_marginStart="32dp"
            />

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:text="닉네임"
            android:textColor="@color/black_text"
            style="@style/Text.Bold20"
            app:layout_constraintStart_toEndOf="@+id/iv_profile"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            android:layout_marginTop="17dp" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/win_container"
            android:layout_width="128dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="17dp"
            app:cardBackgroundColor="@color/green_select"
            app:strokeColor="@color/green_active"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toBottomOf="@id/tv_nickname"
            app:layout_constraintLeft_toRightOf="@+id/iv_profile"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            >

                <TextView
                    android:id="@+id/tv_win_rate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="최근 5경기 승률 00%"
                    android:textColor="@color/green_active"
                    style="@style/Text.Regular12"/>

        </com.google.android.material.card.MaterialCardView>

        <ImageView
            android:id="@+id/iv_gender"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_gender_male"
            app:layout_constraintLeft_toRightOf="@+id/tv_nickname"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            android:layout_marginTop="17dp"
            android:layout_marginStart="8dp"
            />


        <!-- 아래 텍스트 정보 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="경기 방식"
            style="@style/Text.Medium16"
            app:layout_constraintTop_toBottomOf="@id/iv_profile"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="40dp"
            android:layout_marginStart="24dp"
            />

        <TextView
            android:id="@+id/tv_promise_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="단식 | 열심히 경기해요"
            style="@style/Text.Regular16"
            app:layout_constraintTop_toBottomOf="@id/iv_profile"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="24dp"
            />

        <View
            android:layout_width="366dp"
            android:layout_height="0.5dp"
            app:layout_constraintTop_toBottomOf="@id/tv_promise_style"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/gray_border"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="날짜"
            style="@style/Text.Medium16"
            app:layout_constraintTop_toBottomOf="@id/tv_promise_style"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp"
            android:layout_marginStart="24dp"
            />

        <TextView
            android:id="@+id/tv_promise_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10월 20일 월요일"
            style="@style/Text.Regular16"
            app:layout_constraintTop_toBottomOf="@id/tv_promise_style"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="24dp"
            />

        <View
            android:layout_width="366dp"
            android:layout_height="0.5dp"
            app:layout_constraintTop_toBottomOf="@id/tv_promise_date"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/gray_border"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시작 시간"
            style="@style/Text.Medium16"
            app:layout_constraintTop_toBottomOf="@id/tv_promise_date"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp"
            android:layout_marginStart="24dp"
            />

        <TextView
            android:id="@+id/tv_promise_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20:00"
            style="@style/Text.Regular16"
            app:layout_constraintTop_toBottomOf="@id/tv_promise_date"
            app:layout_constraintEnd_toStartOf="@+id/btn_select_start_time"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="12dp"
            />

        <ImageButton
            android:id="@+id/btn_select_start_time"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_down"
            app:layout_constraintTop_toBottomOf="@id/tv_promise_date"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="24dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            />

        <View
            android:layout_width="366dp"
            android:layout_height="0.5dp"
            app:layout_constraintTop_toBottomOf="@id/tv_promise_start_time"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/gray_border"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="종료 시간"
            style="@style/Text.Medium16"
            app:layout_constraintTop_toBottomOf="@id/tv_promise_start_time"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp"
            android:layout_marginStart="24dp"
            />

        <TextView
            android:id="@+id/tv_promise_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="21:00"
            style="@style/Text.Regular16"
            app:layout_constraintTop_toBottomOf="@id/tv_promise_start_time"
            app:layout_constraintEnd_toStartOf="@+id/btn_select_end_time"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="12dp"
            />

        <ImageButton
            android:id="@+id/btn_select_end_time"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_down"
            app:layout_constraintTop_toBottomOf="@id/tv_promise_start_time"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="24dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            />

        <View
            android:layout_width="366dp"
            android:layout_height="0.5dp"
            app:layout_constraintTop_toBottomOf="@id/tv_promise_end_time"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/gray_border"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="장소"
            style="@style/Text.Medium16"
            app:layout_constraintTop_toBottomOf="@id/tv_promise_end_time"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp"
            android:layout_marginStart="24dp"
            />

        <TextView
            android:id="@+id/tv_promise_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="망원 다목적 체육관"
            style="@style/Text.Regular16"
            app:layout_constraintTop_toBottomOf="@id/tv_promise_end_time"
            app:layout_constraintEnd_toStartOf="@+id/btn_select_end_time"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="12dp"
            />

        <ImageButton
            android:id="@+id/btn_select_place"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_search"
            app:layout_constraintTop_toBottomOf="@id/tv_promise_end_time"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="24dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            />

        <!-- 지도 -->
        <fragment
            android:id="@+id/map_container"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="364dp"
            android:layout_height="195dp"
            android:layout_marginTop="22dp"
            app:layout_constraintTop_toBottomOf="@id/tv_promise_place"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:context=".ui.ChatPromiseActivity"
            tools:ignore="UnusedAttribute"/>




        <android.widget.Button
            android:id="@+id/btn_finish"
            style="@style/FlatButton"
            android:layout_width="364dp"
            android:layout_height="54dp"
            android:text="경기 약속 확정하기"
            android:background="@drawable/bg_next_button_active"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="32dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>