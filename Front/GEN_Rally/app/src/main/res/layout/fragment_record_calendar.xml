<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/layout_months"
        android:layout_width="124dp"
        android:layout_height="31dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="24dp"
        >

        <ImageButton
            android:id="@+id/btn_prev_week"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back_arrow"
            app:tint="@color/gray_500"
            android:background="?attr/selectableItemBackgroundBorderless"
            />

        <TextView
            android:id="@+id/tv_weeks"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="11ì›”"
            style="@style/Text.Semibold24"
            android:layout_marginHorizontal="8dp"
            />

        <ImageButton
            android:id="@+id/btn_next_week"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow"
            app:tint="@color/gray_500"
            android:background="?attr/selectableItemBackgroundBorderless"
            />
    </LinearLayout>

    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        android:id="@+id/calendar_view"
        android:layout_width="364dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:theme="@style/CalenderViewCustom"
        app:layout_constraintTop_toBottomOf="@id/layout_months"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:mcv_showOtherDates="none"
        app:mcv_firstDayOfWeek="sunday"
        app:mcv_dateTextAppearance="@style/CalenderViewCustom"
        app:mcv_weekDayTextAppearance="@style/CalenderDayViewCustom"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/gray_100"
        android:layout_gravity="center"
        app:layout_constraintTop_toBottomOf="@id/calendar_view"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>