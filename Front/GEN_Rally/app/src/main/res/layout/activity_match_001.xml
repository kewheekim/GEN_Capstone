<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/match_001"
    android:fitsSystemWindows="true"
    >

    <include
        android:id="@+id/include_toolbar"
        layout="@layout/layout_toolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_reserved"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="예약된 매칭"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#AAAAAA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include_toolbar"
        android:layout_marginTop="8dp"
        android:layout_marginStart="43dp"
        />

    <TextView
        android:id="@+id/tv_searching"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="찾고 있는 매칭"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black_text"
        app:layout_constraintLeft_toRightOf="@id/tv_reserved"
        app:layout_constraintTop_toBottomOf="@+id/include_toolbar"
        android:layout_marginTop="8dp"
        android:layout_marginStart="34dp"
        />

    <TextView
        android:id="@+id/tv_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="받은/보낸 요청"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#AAAAAA"
        app:layout_constraintLeft_toRightOf="@id/tv_searching"
        app:layout_constraintTop_toBottomOf="@+id/include_toolbar"
        android:layout_marginTop="8dp"
        android:layout_marginStart="34dp"
        />

    <include
        android:id="@+id/match_card"
        android:layout_width="364dp"
        android:layout_height="280dp"
        android:layout_marginTop="36dp"
        layout="@layout/item_match_card"
        app:layout_constraintTop_toBottomOf="@id/tv_searching"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:elevation="0dp"
        app:menu="@menu/bottom_nav_bar"
        app:itemTextColor="#AAAAAA"
        app:labelVisibilityMode="labeled"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
    />

</androidx.constraintlayout.widget.ConstraintLayout>