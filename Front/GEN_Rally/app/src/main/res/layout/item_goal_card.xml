<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/goal_card"
    android:layout_width="364dp"
    android:layout_height="88dp"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/gray_border"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        >

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/goal_type_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:backgroundTint="#F9FFFF"
            android:layout_width="61dp"
            android:layout_height="26dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            >
            <TextView
                android:id="@+id/tv_goal_type"
                android:layout_width="61dp"
                android:layout_height="26dp"
                android:gravity="center"
                android:text="건강 관리"
                android:textColor="#3191FF"
                style="@style/Text.Medium12"
                />

        </com.google.android.material.card.MaterialCardView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/goal_type_card"
            android:gravity="center"
            android:text="경기 당 200칼로리 소모하기"
            android:layout_marginTop="4dp"
            style="@style/Text.Medium16"
            />

        <TextView
            android:id="@+id/tv_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="15dp"
            android:text="7/8"
            style="@style/Text.Bold14"
            />

        <ProgressBar
            android:id="@+id/progress_bar"
            style="@style/Widget.AppCompat.ProgressBar"
            android:progressDrawable="@drawable/custom_circle_progressbar"
            android:progressTint="@color/green_active"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="56dp"
            android:layout_height="56dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
