<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBFAFC">

    <!-- 상단 툴바 -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="?attr/colorSurface"
        android:paddingHorizontal="10dp"
        android:paddingVertical="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_back_arrow"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="아어려워요"
            style="@style/Text.Semibold20"
            android:layout_gravity="center"
            />

    </androidx.appcompat.widget.Toolbar>

    <!-- 매칭된 경기 일정 카드 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/match_card"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:cardElevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="24dp"
            android:paddingVertical="17dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <!-- 시간, 장소 text view -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_clock"
                        android:layout_marginStart="70dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="시간"
                        android:textColor="#757575"
                        style="@style/Text.Regular12"
                        android:layout_marginStart="4dp" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_map"
                        android:layout_marginStart="70dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="장소"
                        android:textColor="#757575"
                        style="@style/Text.Regular12"
                        android:layout_marginStart="4dp"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="38dp"
                        android:layout_height="26dp"
                        android:backgroundTint="#757575"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="나"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            style="@style/Text.Regular12"/>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/tv_time_me"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="19:00~21:00"
                        android:textColor="@color/black_text"
                        style="@style/Text.Regular12"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:id="@+id/tv_place_me"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:text="망원 다목적 체육관"
                        android:textColor="@color/black_text"
                        style="@style/Text.Regular12"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
                
                <View
                    android:layout_width="219dp"
                    android:layout_height="0.5dp"
                    android:background="@color/gray_border"
                    android:layout_marginStart="54dp"
                    android:layout_marginTop="4dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="38dp"
                        android:layout_height="26dp"
                        android:backgroundTint="#757575"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="12dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="상대"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            style="@style/Text.Regular12"/>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/tv_time_you"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="20:00~21:00"
                        android:textColor="@color/black_text"
                        style="@style/Text.Regular12"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:id="@+id/tv_place_you"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:text="망원 다목적 체육관"
                        android:textColor="@color/black_text"
                        style="@style/Text.Regular12"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

            </LinearLayout>

            <android.widget.Button
                android:id="@+id/btn_select"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="경기\n약속 잡기"
                style="@style/Text.Semibold14"
                android:textColor="@color/white"
                android:background="@drawable/bg_next_button_active"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <!-- 채팅 영역 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_chat"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/match_card"
        app:layout_constraintBottom_toTopOf="@id/layout_input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 하단 입력창 -->
    <LinearLayout
        android:id="@+id/layout_input"
        android:layout_width="match_parent"
        android:layout_height="129dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingHorizontal="24dp"
        android:paddingTop="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/et_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="메시지 보내기"
            style="@style/Text.Semibold16"
            android:textColorHint="@color/gray_nav_bar"
            android:background="@drawable/bg_search_text"
            android:padding="8dp"
            android:imeOptions="actionSend"/>

        <ImageButton
            android:id="@+id/btn_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_send"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_marginStart="10dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
