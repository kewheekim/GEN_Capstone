<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="364dp"
    android:layout_height="115dp"
    android:layout_gravity="center_horizontal">
    <View
        android:id="@+id/divider"
        android:layout_width="364dp"
        android:layout_height="1dp"
        android:background="@color/gray_border"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_target"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        app:layout_constraintTop_toBottomOf="@id/divider"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp"
        android:backgroundTint="@color/blue_light"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        >
        <TextView
            android:id="@+id/tv_target"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:gravity="center"
            android:text="2주"
            android:textColor="@color/blue"
            style="@style/Text.Medium12"
            android:paddingHorizontal="12dp"/>
    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_theme"
        android:layout_width="61dp"
        android:layout_height="26dp"
        app:layout_constraintTop_toBottomOf="@id/divider"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@id/cv_target"
        android:layout_marginStart="4dp"
        android:backgroundTint="@color/blue_light"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp">
        <TextView
            android:id="@+id/tv_theme"
            android:layout_width="61dp"
            android:layout_height="26dp"
            android:gravity="center"
            android:text="건강 관리"
            android:textColor="@color/blue"
            style="@style/Text.Medium12" />
    </com.google.android.material.card.MaterialCardView>
    <TextView
        android:id="@+id/tv_goal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cv_target"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp"
        android:text="경기 전후 충분한 물 마시기"
        style="@style/Text.Semibold20" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/cb_achieve"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:button="@drawable/custom_checkbox" />
</androidx.constraintlayout.widget.ConstraintLayout>