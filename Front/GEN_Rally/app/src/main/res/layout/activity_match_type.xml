<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mat_ap_001"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_default"
    android:fitsSystemWindows="true">

    <include
        android:id="@+id/toolbar_go"
        layout="@layout/layout_toolbar_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/title_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="경기 방식을 선택해주세요"
        android:textColor="@color/black_text"
        style="@style/Text.Semibold20"
        app:layout_constraintTop_toBottomOf="@id/toolbar_go"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"/>

    <TextView
        android:id="@+id/subtitle_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="실력은 따로 선택하지 않아도 괜찮아요\n랠리가 비슷한 수준의 상대를 찾아드릴게요"
        style="@style/Text.Medium14"
        app:layout_constraintTop_toBottomOf="@id/title_text"
        app:layout_constraintStart_toStartOf="@id/title_text"
        app:layout_constraintEnd_toEndOf="@id/title_text"
        android:layout_marginTop="8dp"/>

    <View
        android:id="@+id/rectangle_single"
        android:layout_width="0dp"
        android:layout_height="148dp"
        android:background="@drawable/selector_rectangle"
        app:layout_constraintTop_toBottomOf="@id/subtitle_text"
        app:layout_constraintStart_toStartOf="@id/subtitle_text"
        app:layout_constraintEnd_toEndOf="@id/subtitle_text"
        android:layout_marginTop="24dp"/>

    <ImageView
        android:id="@+id/double_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_singles"
        app:layout_constraintBottom_toBottomOf="@id/rectangle_single"
        app:layout_constraintEnd_toEndOf="@id/rectangle_single" />

    <TextView
        android:id="@+id/single_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="단식"
        style="@style/Text.Semibold24"
        android:textColor="@color/black_text"
        app:layout_constraintTop_toTopOf="@id/rectangle_single"
        app:layout_constraintStart_toStartOf="@id/rectangle_single"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"/>

    <TextView
        android:id="@+id/single_sub"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="경기 상대 1명을\n매칭받아요"
        style="@style/Text.Medium16"
        app:layout_constraintTop_toBottomOf="@id/single_title"
        app:layout_constraintStart_toStartOf="@id/single_title"
        app:layout_constraintEnd_toEndOf="@id/rectangle_single"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"/>

    <View
        android:id="@+id/rectangle_double"
        android:layout_width="0dp"
        android:layout_height="148dp"
        android:clickable="false"
        android:focusable="false"
        android:background="@drawable/selector_rectangle"
        app:layout_constraintTop_toBottomOf="@id/rectangle_single"
        app:layout_constraintStart_toStartOf="@id/rectangle_single"
        app:layout_constraintEnd_toEndOf="@id/rectangle_single"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/double_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="복식"
        style="@style/Text.Semibold24"
        android:textColor="@color/black_text"
        app:layout_constraintTop_toTopOf="@id/rectangle_double"
        app:layout_constraintStart_toStartOf="@id/rectangle_double"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/double_sub"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="나의 복식 파트너와 함께,\n2인 상대 팀을 매칭받아요"
        style="@style/Text.Medium16"
        app:layout_constraintTop_toBottomOf="@id/double_title"
        app:layout_constraintStart_toStartOf="@id/double_title"
        app:layout_constraintEnd_toEndOf="@id/rectangle_double"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_doubles"
        app:layout_constraintTop_toTopOf="@id/rectangle_double"
        app:layout_constraintEnd_toEndOf="@id/rectangle_double"
        />

    <include
        layout="@layout/layout_next_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
