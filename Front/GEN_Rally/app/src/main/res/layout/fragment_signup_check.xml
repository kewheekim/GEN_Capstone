<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        android:id="@+id/toolbar_back"
        layout="@layout/layout_toolbar_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="경기 상대를 매칭받을 때,\n가장 중요하게 생각하는 건 무엇인가요?"
        android:textSize="22sp"
        android:textColor="@color/black_text"
        android:textStyle="bold"
        android:lineSpacingExtra="8dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_back"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="더 고려해서 매칭해드릴게요\n나중에 언제든지 변경할 수 있어요"
        android:textSize="16sp"
        android:textColor="@color/gray_text"
        android:lineSpacingExtra="4dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_back"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="102dp"
        android:layout_marginStart="24dp"
        />

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/toolbar_back"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="174dp"
        android:layout_marginHorizontal="24dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:orientation="vertical" />

    <include
        layout="@layout/layout_next_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>