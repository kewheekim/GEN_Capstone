<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 상단 툴바 -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="?attr/colorSurface"
        android:paddingHorizontal="10dp"
        android:paddingVertical="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/icon_x"
            android:background="?attr/selectableItemBackgroundBorderless"/>

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/tv_promise_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아어려워요님과 경기 약속"
        style="@style/Text.Semibold22"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        />

    <!-- 매칭된 경기 일정 카드 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/match_card"
        android:layout_width="315dp"
        android:layout_height="131dp"
        app:layout_constraintTop_toBottomOf="@id/tv_promise_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        app:cardElevation="0dp"
        >

    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <!-- 시간, 장소 text view -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_clock"
                android:layout_marginStart="70dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시간"
                android:textColor="#757575"
                style="@style/Text.Regular12"
                android:layout_marginStart="4dp" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_map"
                android:layout_marginStart="70dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="장소"
                android:textColor="#757575"
                style="@style/Text.Regular12"
                android:layout_marginStart="4dp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:layout_width="38dp"
                android:layout_height="26dp"
                android:backgroundTint="#757575"
                app:cardElevation="0dp"
                app:cardCornerRadius="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="나"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    style="@style/Text.Regular12"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_time_me"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="19:00~21:00"
                android:textColor="@color/black_text"
                style="@style/Text.Regular12"
                android:layout_marginStart="20dp"/>

            <TextView
                android:id="@+id/tv_place_me"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:text="망원 다목적 체육관"
                android:textColor="@color/black_text"
                style="@style/Text.Regular12"/>
        </LinearLayout>

        <View
            android:layout_width="219dp"
            android:layout_height="0.5dp"
            android:background="@color/gray_border"
            android:layout_marginStart="54dp"
            android:layout_marginTop="4dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:layout_width="38dp"
                android:layout_height="26dp"
                android:backgroundTint="#757575"
                app:cardElevation="0dp"
                app:cardCornerRadius="12dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="상대"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    style="@style/Text.Regular12"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_time_you"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="20:00~21:00"
                android:textColor="@color/black_text"
                style="@style/Text.Regular12"
                android:layout_marginStart="20dp"/>

            <TextView
                android:id="@+id/tv_place_you"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:text="망원 다목적 체육관"
                android:textColor="@color/black_text"
                style="@style/Text.Regular12"/>
        </LinearLayout>

    </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- 아래 텍스트 정보 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="경기 방식"
        style="@style/Text.Medium16"
        app:layout_constraintTop_toBottomOf="@id/match_card"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        />

    <TextView
        android:id="@+id/tv_promise_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="단식 | 열심히 경기해요"
        style="@style/Text.Regular16"
        app:layout_constraintTop_toBottomOf="@id/match_card"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        />

    <View
        android:layout_width="366dp"
        android:layout_height="0.5dp"
        app:layout_constraintTop_toBottomOf="@id/tv_promise_style"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/gray_border"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="날짜"
        style="@style/Text.Medium16"
        app:layout_constraintTop_toBottomOf="@id/match_card"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="80dp"
        android:layout_marginStart="24dp"
        />

    <TextView
        android:id="@+id/tv_promise_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10월 20일 월요일"
        style="@style/Text.Regular16"
        app:layout_constraintTop_toBottomOf="@id/match_card"
        app:layout_constraintEnd_toStartOf="@+id/btn_select_date"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="12dp"
        />
    
    <ImageButton
        android:id="@+id/btn_select_date"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_arrow_down"
        app:layout_constraintTop_toBottomOf="@id/match_card"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="24dp"
        android:background="?attr/selectableItemBackgroundBorderless"
    />

    <View
        android:layout_width="366dp"
        android:layout_height="0.5dp"
        app:layout_constraintTop_toBottomOf="@id/tv_promise_date"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/gray_border"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="시작 시간"
        style="@style/Text.Medium16"
        app:layout_constraintTop_toBottomOf="@id/match_card"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="136dp"
        android:layout_marginStart="24dp"
        />

    <TextView
        android:id="@+id/tv_promise_start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20:00"
        style="@style/Text.Regular16"
        app:layout_constraintTop_toBottomOf="@id/match_card"
        app:layout_constraintEnd_toStartOf="@+id/btn_select_start_time"
        android:layout_marginTop="136dp"
        android:layout_marginEnd="12dp"
        />

    <ImageButton
        android:id="@+id/btn_select_start_time"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_arrow_down"
        app:layout_constraintTop_toBottomOf="@id/match_card"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="136dp"
        android:layout_marginEnd="24dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        />

    <View
        android:layout_width="366dp"
        android:layout_height="0.5dp"
        app:layout_constraintTop_toBottomOf="@id/tv_promise_start_time"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/gray_border"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="종료 시간"
        style="@style/Text.Medium16"
        app:layout_constraintTop_toBottomOf="@id/match_card"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="192dp"
        android:layout_marginStart="24dp"
        />

    <TextView
        android:id="@+id/tv_promise_end_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="21:00"
        style="@style/Text.Regular16"
        app:layout_constraintTop_toBottomOf="@id/match_card"
        app:layout_constraintEnd_toStartOf="@+id/btn_select_end_time"
        android:layout_marginTop="192dp"
        android:layout_marginEnd="12dp"
        />

    <ImageButton
        android:id="@+id/btn_select_end_time"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_arrow_down"
        app:layout_constraintTop_toBottomOf="@id/match_card"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="192dp"
        android:layout_marginEnd="24dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        />

    <View
        android:layout_width="366dp"
        android:layout_height="0.5dp"
        app:layout_constraintTop_toBottomOf="@id/tv_promise_end_time"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/gray_border"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="장소"
        style="@style/Text.Medium16"
        app:layout_constraintTop_toBottomOf="@id/match_card"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="248dp"
        android:layout_marginStart="24dp"
        />

    <TextView
        android:id="@+id/tv_promise_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="망원 다목적 체육관"
        style="@style/Text.Regular16"
        app:layout_constraintTop_toBottomOf="@id/match_card"
        app:layout_constraintEnd_toStartOf="@+id/btn_select_end_time"
        android:layout_marginTop="248dp"
        android:layout_marginEnd="12dp"
        />

    <ImageButton
        android:id="@+id/btn_select_place"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_search"
        app:layout_constraintTop_toBottomOf="@id/match_card"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="248dp"
        android:layout_marginEnd="24dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        />

    <!-- 지도 -->
    <fragment
        android:id="@+id/map_container"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="364dp"
        android:layout_height="195dp"
        android:layout_marginTop="22dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="@id/tv_promise_place"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:context=".ui.ChatPromiseActivity"
        tools:ignore="UnusedAttribute"/>


    <android.widget.Button
        android:id="@+id/btn_finish"
        style="@style/FlatButton"
        android:layout_width="364dp"
        android:layout_height="54dp"
        android:text="완료"
        android:background="@drawable/bg_next_button_active"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="32dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>