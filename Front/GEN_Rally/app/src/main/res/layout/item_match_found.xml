<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="364dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp"
    android:layout_marginTop="8dp"
    android:paddingVertical="24dp"
    android:paddingHorizontal="20dp"
    android:background="@drawable/bg_match_item"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:elevation = "0dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/speech_card"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardCornerRadius="8dp"
        app:strokeColor="@color/green_active"
        app:strokeWidth="1dp"
        app:cardBackgroundColor="@color/green_select"
        app:cardElevation="0dp"
        >
        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:text="경기 약속 확정 완료"
            android:textColor="@color/green_active"
            style="@style/Text.Medium12" />
    </com.google.android.material.card.MaterialCardView>
    <TextView
        android:id="@+id/tv_date_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/speech_card"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        android:text="4월 21일(월) 단식 경기"
        android:textColor="@color/black_text"
        style="@style/Text.Semibold20" />
    <TextView
        android:id="@+id/tv_time_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_date_type"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        android:text="경기 시간"
        android:textColor="@color/gray_text"
        style="@style/Text.Medium12"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_date_type"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        android:text="19:00~21:00"
        android:textColor="@color/black_text"
        style="@style/Text.Medium14"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/tv_place_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_date_type"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="108dp"
        android:gravity="center"
        android:text="경기 장소"
        android:textColor="@color/gray_text"
        style="@style/Text.Medium12"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/tv_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_date_type"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="108dp"
        android:gravity="center"
        android:text="망원 다목적 체육관"
        android:textColor="@color/black_text"
        style="@style/Text.Medium14"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/iv_profile"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_default_profile"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_time"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:scaleType="centerCrop" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_time"
        android:layout_marginTop="23dp"
        app:layout_constraintStart_toEndOf="@id/iv_profile"
        android:layout_marginStart="16dp"
        android:gravity="center"
        android:text="경기 상대"
        android:textColor="@color/gray_text"
        style="@style/Text.Medium12" />
    <TextView
        android:id="@+id/tv_opponent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_time"
        android:layout_marginTop="41dp"
        app:layout_constraintStart_toEndOf="@id/iv_profile"
        android:layout_marginStart="16dp"
        android:gravity="center"
        android:text="아어려워요"
        android:textColor="@color/black_text"
        style="@style/Text.Medium16" />
    <ImageButton
        android:id="@+id/btn_chat"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:src="@drawable/ic_chat_btn"
        app:layout_constraintTop_toBottomOf="@+id/tv_time"
        android:layout_marginTop="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@android:color/transparent"
        />
    <ImageButton
        android:id="@+id/btn_more"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_ellipsis"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@android:color/transparent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>