<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:background="@color/bg_default" >

    <include
        android:id="@+id/toolbar"
        layout="@layout/layout_toolbar_home"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="다가오는 경기"
        style="@style/Text.Semibold18"
        android:textColor="@color/black_text"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="34dp"
        />

    <ImageView
        android:id="@+id/iv_gamenull"
        android:src="@drawable/ic_gamenull"
        android:layout_width="247dp"
        android:layout_height="147dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tv_game"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageButton
        android:id="@+id/btn_request"
        android:src="@drawable/ic_request_btn"
        android:layout_width="364dp"
        android:layout_height="148dp"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        android:layout_marginTop="233dp"
        app:layout_constraintTop_toBottomOf="@id/tv_game"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tv_goal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="현재 나의 목표"
        style="@style/Text.Semibold18"
        android:textColor="@color/black_text"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="471dp"
        android:layout_marginStart="34dp"
        />

    <ImageView
        android:id="@+id/iv_goalnull"
        android:src="@drawable/ic_goalnull"
        android:layout_width="247dp"
        android:layout_height="147dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tv_goal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>