<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp">

    <TextView
        android:id="@+id/tv_place_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="장소 이름"
        style="@style/Text.Semibold18"
        android:textColor="@color/black_text"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_select"
        app:layout_constraintBottom_toTopOf="@id/tv_place_address" />

    <TextView
        android:id="@+id/tv_place_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="주소"
        style="@style/Text.Medium14"
        android:textColor="#AAAAAA"
        app:layout_constraintTop_toBottomOf="@id/tv_place_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/tv_place_name"
        app:layout_constraintBottom_toBottomOf="parent" />

    <android.widget.Button
        android:id="@+id/btn_select"
        android:layout_width="98dp"
        android:layout_height="52dp"
        android:text="장소 선택"
        style="@style/Text.Medium14"
        android:textColor="@color/black_text"
        android:background="@drawable/bg_button_inactive"
        android:padding="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
