<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/green_active"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="222dp"
        android:orientation="vertical"
        android:background="@color/green_active">
        <include
            android:id="@+id/toolbar_go"
            layout="@layout/layout_toolbar_back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시간"
            android:textColor="@color/white"
            android:layout_gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="61dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/pretendard_variable"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/tv_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00:00"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="89dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/kimm_bold"
            android:textFontWeight="600"
            android:textSize="56sp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/gray_800">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@id/iv_score1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp">

            <ImageView
                android:id="@+id/iv_score1"
                android:layout_width="132dp"
                android:layout_height="213dp"
                android:src="@drawable/ic_score"
                android:scaleType="fitCenter" />
            <TextView
                android:id="@+id/tv_opponent_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="상대"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="@font/pretendard_variable"
                android:layout_gravity="center_horizontal|top"
                android:layout_marginTop="51dp"
                android:textFontWeight="600"/>
            <TextView
                android:id="@+id/tv_opponent_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="64sp"
                android:fontFamily="@font/kimm_bold"
                android:layout_gravity="center_horizontal|top"
                android:layout_marginTop="112dp"/>
            <ImageView
                android:id="@+id/iv_opponent_serve"
                android:layout_width="15dp"
                android:layout_height="19dp"
                android:src="@drawable/ic_serve"
                android:layout_gravity="top"
                android:layout_marginTop="183dp"
                android:layout_marginStart="102dp"/>
        </FrameLayout>

        <TextView
            android:id="@+id/tv_set_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:layout_constraintStart_toEndOf="@id/iv_score1"
            android:layout_marginStart="28dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="34dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textFontWeight="600"
            android:fontFamily="@font/pretendard_variable"
            android:text="1세트" />

        <TextView
            android:id="@+id/tv_opponent_sets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            app:layout_constraintStart_toEndOf="@id/iv_score1"
            android:layout_marginStart="14dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="64dp"
            android:fontFamily="@font/kimm_bold"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_user_sets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            app:layout_constraintStart_toEndOf="@id/iv_score1"
            android:layout_marginStart="61dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="64dp"
            android:fontFamily="@font/kimm_bold"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:textStyle="bold"/>


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="256dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp">

            <ImageView
                android:layout_width="132dp"
                android:layout_height="213dp"
                android:src="@drawable/ic_score"
                android:scaleType="fitCenter" />
            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="나"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="@font/pretendard_variable"
                android:layout_gravity="center_horizontal|top"
                android:layout_marginTop="51dp"
                android:textFontWeight="600"/>
            <TextView
                android:id="@+id/tv_user_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/green_active"
                android:textSize="64sp"
                android:fontFamily="@font/kimm_bold"
                android:layout_gravity="center_horizontal|top"
                android:layout_marginTop="112dp"/>
            <ImageView
                android:id="@+id/iv_user_serve"
                android:layout_width="15dp"
                android:layout_height="19dp"
                android:src="@drawable/ic_serve"
                android:layout_gravity="top"
                android:layout_marginTop="183dp"
                android:layout_marginStart="14dp"/>
        </FrameLayout>

        <android.widget.Button
            android:id="@+id/btn_score"
            style="@style/FlatButton"
            android:layout_width="364dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_score1"
            android:layout_marginTop="21dp"
            android:text="득점"
            android:background="@drawable/bg_next_button_active"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:fontFamily="@font/pretendard_variable"
            android:textFontWeight="700"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/tv_undo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_score"
            android:layout_marginTop="21dp"
            android:fontFamily="@font/pretendard_variable"
            android:gravity="center"
            android:text="점수 되돌리기"
            android:textColor="@color/white"
            android:textFontWeight="700"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/tv_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_undo"
            android:layout_marginTop="165dp"
            android:fontFamily="@font/pretendard_variable"
            android:text="경기 일시정지"
            android:textColor="@color/gray_600"
            android:textFontWeight="500"
            android:textSize="20sp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
