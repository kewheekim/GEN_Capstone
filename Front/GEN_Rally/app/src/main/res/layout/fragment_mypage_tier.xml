<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="513dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="-50dp"
        android:background="@drawable/image_mypage_tier"
        >
    </LinearLayout>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:contentInsetStart="0dp"
        app:contentInsetLeft="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_back_arrow"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_marginStart="10dp"
            />

        <TextView
            android:id="@+id/tv_toolbar"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="나의 티어"
            style="@style/Text.Semibold18"
            android:textColor="@color/gray_800"
            />

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rally의 티어는 승패와 매너점수, 00에 따른\n철저한 점수 계산을 통해 티어를 부여하고 있습니다."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:layout_marginTop="282dp"
        android:gravity="center"
        style="@style/Text.Regular12"
        android:textColor="@color/gray_600"
        />

    <TextView
        android:id="@+id/tv_tier_level"
        android:layout_width="182dp"
        android:layout_height="54dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:layout_marginTop="345dp"
        android:layout_marginStart="24dp"
        android:text="티어 단계"
        style="@style/Text.Semibold18"
        android:textColor="@color/green_active"
        android:gravity="center"
        />
    
    <View
        android:id="@+id/view_tier_level"
        android:layout_width="182dp"
        android:layout_height="2dp"
        android:background="@color/green_active"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:layout_marginTop="401dp"
        android:layout_marginStart="24dp"/>

    <TextView
        android:id="@+id/tv_tier_criteria"
        android:layout_width="182dp"
        android:layout_height="54dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:layout_marginTop="345dp"
        android:layout_marginStart="206dp"
        android:text="티어 부여 기준"
        style="@style/Text.Semibold18"
        android:textColor="@color/gray_400"
        android:gravity="center"
        />

    <View
        android:id="@+id/view_tier_criteria"
        android:layout_width="182dp"
        android:layout_height="2dp"
        android:background="@color/gray_200"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:layout_marginTop="401dp"
        android:layout_marginStart="206dp"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_tier_level"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/view_tier_level"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <!-- 입문자 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_bronze"
        android:layout_width="364dp"
        android:layout_height="96dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_tier_level"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        app:cardElevation="0dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="49dp"
                android:layout_height="54dp"
                android:src="@drawable/ic_tier_bronze1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="21dp"
                android:layout_marginStart="36dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="입문자 1~3"
                android:fontFamily="@font/kimm_bold"
                android:textSize="20sp"
                android:textColor="#DC904B"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="21dp"
                android:layout_marginStart="120dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="티어설명"
                style="@style/Text.Medium14"
                android:textColor="@color/gray_500"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="52dp"
                android:layout_marginStart="120dp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>


    <!-- 초보자 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_silver"
        android:layout_width="364dp"
        android:layout_height="96dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_bronze"
        android:layout_marginTop="10dp"
        android:layout_marginStart="24dp"
        app:cardElevation="0dp"
        app:strokeColor="@color/green_active"
        app:strokeWidth="1dp"
        app:cardCornerRadius="10dp"
        android:background="#F9FFF8"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="110dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_tier_silver1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="2dp"
                android:layout_marginStart="6dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="초보자 1~3"
                android:fontFamily="@font/kimm_bold"
                android:textSize="20sp"
                android:textColor="@color/gray_500"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="21dp"
                android:layout_marginStart="120dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="티어설명"
                style="@style/Text.Medium14"
                android:textColor="@color/gray_500"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="52dp"
                android:layout_marginStart="120dp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>


    <!-- 중급자 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_gold"
        android:layout_width="364dp"
        android:layout_height="96dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_silver"
        android:layout_marginTop="10dp"
        android:layout_marginStart="24dp"
        app:cardElevation="0dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="63dp"
                android:layout_height="63dp"
                android:src="@drawable/ic_tier_gold1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="15dp"
                android:layout_marginStart="30dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="중급자 1~3"
                android:fontFamily="@font/kimm_bold"
                android:textSize="20sp"
                android:textColor="#CFBE40"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="21dp"
                android:layout_marginStart="120dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="티어설명"
                style="@style/Text.Medium14"
                android:textColor="@color/gray_500"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="52dp"
                android:layout_marginStart="120dp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>


    <!-- 상급자 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_dia"
        android:layout_width="364dp"
        android:layout_height="96dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_gold"
        android:layout_marginTop="10dp"
        android:layout_marginStart="24dp"
        app:cardElevation="0dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_tier_dia1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginStart="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="상급자 1~3"
                android:fontFamily="@font/kimm_bold"
                android:textSize="20sp"
                android:textColor="#AD54D6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="21dp"
                android:layout_marginStart="120dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="티어설명"
                style="@style/Text.Medium14"
                android:textColor="@color/gray_500"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="52dp"
                android:layout_marginStart="120dp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!--TODO: 티어 부여 기준 눌렀을 때 뷰 gone 했던 거 활성화시키기 -->

    <ScrollView
        android:id="@+id/scroll_tier_criteria"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/view_tier_level"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Q. 티어는 어떻게 결정되나요?"
                style="@style/Text.Semibold18"
                android:layout_marginBottom="24dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rally는 어쩌고저쩌고 해요... "
                style="@style/Text.Medium16"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>