<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="352dp"
    android:layout_height="320dp"
    card_view:cardCornerRadius="16dp"
    android:elevation="0dp"
    android:layout_gravity="center"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/btn_x"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/icon_x"
            android:contentDescription=" "
            android:background="@color/white"
            android:layout_gravity="center_vertical|end" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="매칭 신청 내용을 확인해주세요!"
            android:textColor="@color/black_text"
            style="@style/Text.Semibold18"
            android:layout_marginTop="-6dp" />

        <LinearLayout
            android:layout_width="304dp"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:background="@drawable/bg_view_active"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            >

            <LinearLayout
                android:id="@+id/date_container"
                android:layout_width="304dp"
                android:layout_height="24dp"
                android:layout_marginStart="3dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="20dp"
                    android:contentDescription="날짜 아이콘"
                    android:src="@drawable/ic_calendar_s" />

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="16dp"
                    android:text="날짜"
                    android:textColor="@color/black_text"
                    style="@style/Text.Medium14" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@color/gray_border" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="시간"
                    android:textColor="@color/black_text"
                    style="@style/Text.Medium14" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/location_container"
                android:layout_width="304dp"
                android:layout_height="24dp"
                android:layout_marginStart="3dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/ic_location_s" />

                <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="16dp"
                    android:text="장소"
                    android:textColor="@color/black_text"
                    style="@style/Text.Medium14"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/style_container"
                android:layout_width="304dp"
                android:layout_height="24dp"
                android:layout_marginStart="3dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/ic_gamestyle_s" />

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="16dp"
                    android:text="유형"
                    android:textColor="@color/black_text"
                    style="@style/Text.Medium14" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@color/gray_border" />

                <TextView
                    android:id="@+id/tv_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="스타일"
                    android:textColor="@color/black_text"
                    style="@style/Text.Medium14" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <android.widget.Button
                android:id="@+id/btn_back"
                android:layout_width="148dp"
                android:layout_height="54dp"
                android:text="다시 선택"
                android:textColor="#AAAAAA"
                style="@style/Text.Medium18"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_button_inactive" />

            <Button
                android:id="@+id/go_btn"
                android:layout_width="148dp"
                android:layout_height="54dp"
                android:text="확인"
                style="@style/Text.Medium18"
                android:textColor="@color/white"
                android:background="@drawable/bg_next_button_active" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
