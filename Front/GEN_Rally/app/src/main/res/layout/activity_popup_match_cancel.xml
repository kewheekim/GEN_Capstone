<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="352dp"
    android:layout_height="320dp"
    card_view:cardCornerRadius="16dp"
    android:elevation="0dp"
    card_view:cardBackgroundColor="@color/white"
    android:background="@android:color/transparent"
    android:layout_gravity="center"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="20dp"
        android:orientation="vertical">

        <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/x_btn"
            android:src="@drawable/icon_x"
            android:contentDescription=" "
            android:background="@color/white"
            android:layout_gravity="center_vertical|end" />

        <TextView
            android:id="@+id/popText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="매칭을 정말 취소하시겠어요?"
            android:textColor="@color/black_text"
            android:textSize="18sp"
            android:layout_marginTop="-6dp"
            android:textStyle="bold" />
    
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="29dp"
            android:layout_marginBottom="50dp">
            <TextView
                android:id="@+id/informText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="신청한 매칭 정보는 삭제되고,\n다시 매칭을 원하는 경우\n 재신청해야 해요"
                android:textAlignment="center"
                android:textSize="18sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <android.widget.Button
                android:id="@+id/back_btn"
                android:layout_width="148dp"
                android:layout_height="54dp"
                android:text="돌아가기"
                android:textSize="18sp"
                android:textColor="#AAAAAA"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_button_inactive" />

            <android.widget.Button
                android:id="@+id/cancel_btn"
                android:layout_width="148dp"
                android:layout_height="54dp"
                android:text="취소"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_next_button_active" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>