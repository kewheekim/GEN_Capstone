<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="352dp"
    android:layout_height="226dp"
    card_view:cardCornerRadius="16dp"
    android:elevation="0dp"
    android:layout_gravity="center"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingVertical="24dp"
        android:paddingHorizontal="20dp">
        <ImageButton
            android:id="@+id/btn_x"
            android:layout_width="48dp"
            android:layout_height="48dp"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/ic_x"
            android:contentDescription="뒤로가기"
            android:background="@color/white" />

        <TextView
            android:id="@+id/tv_title"
            android:text="'아어려워요' 님에게\n매칭 요청을 보내시겠어요?"
            android:layout_width="304dp"
            android:layout_height="72dp"
            android:gravity="center"
            card_view:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="28dp"
            card_view:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/black_text"
            style="@style/Text.Semibold18" />

        <android.widget.Button
            android:id="@+id/btn_back"
            android:layout_width="148dp"
            android:layout_height="54dp"
            android:text="돌아가기"
            style="@style/Text.Medium18"
            android:textColor="@color/gray_nav_bar"
            card_view:layout_constraintTop_toBottomOf="@+id/tv_title"
            android:layout_marginTop="24dp"
            card_view:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/bg_button_inactive" />
        <Button
            android:id="@+id/go_btn"
            android:layout_width="148dp"
            android:layout_height="54dp"
            android:text="보내기"
            style="@style/Text.Medium18"
            android:textColor="@color/white"
            card_view:layout_constraintTop_toBottomOf="@+id/tv_title"
            android:layout_marginTop="24dp"
            card_view:layout_constraintStart_toEndOf="@id/btn_back"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_next_button_active" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>