<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="364dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp"
    android:layout_marginTop="8dp"
    android:paddingVertical="24dp"
    android:paddingHorizontal="20dp"
    android:background="@drawable/bg_match_item"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/speech_card"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardCornerRadius="8dp"
        app:strokeColor="@color/gray_nav_bar"
        app:strokeWidth="1dp"
        app:cardBackgroundColor="@color/gray100"
        >
        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:text="요청 보류 중"
            android:textColor="@color/gray_text"
            style="@style/Text.Medium12" />
    </com.google.android.material.card.MaterialCardView>
    <TextView
        android:id="@+id/tv_date_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/speech_card"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        android:text="4월 21일(월) 단식 경기"
        android:textColor="@color/black_text"
        style="@style/Text.Semibold20" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_date_type"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        android:text="희망 시간"
        android:textColor="@color/gray_text"
        style="@style/Text.Medium12" />
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_date_type"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        android:text="19:00~21:00"
        android:textColor="@color/black_text"
        style="@style/Text.Medium14" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_date_type"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="108dp"
        android:gravity="center"
        android:text="희망 장소"
        android:textColor="@color/gray_text"
        style="@style/Text.Medium12" />
    <TextView
        android:id="@+id/tv_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_date_type"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="108dp"
        android:gravity="center"
        android:text="망원 다목적 체육관"
        android:textColor="@color/black_text"
        style="@style/Text.Medium14" />
    <android.widget.Button
        style="@style/FlatButton"
        android:id="@+id/btn_candidates"
        android:layout_width="324dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_next_button_active"
        android:text="후보 확인하기"
        android:textSize="16sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tv_time"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/pretendard_variable"
        />
    <TextView
        android:id="@+id/tv_refusal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btn_candidates"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:text="추천 상대 업데이트까지 47:00 남음  "
        android:textColor="@color/gray_text"
        style="@style/Text.Medium14" />

    <ImageButton
        android:id="@+id/btn_more"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_ellipsis"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@android:color/transparent" />
</androidx.constraintlayout.widget.ConstraintLayout>