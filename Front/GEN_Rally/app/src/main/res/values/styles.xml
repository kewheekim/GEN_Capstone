<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 전체 앱 테마 -->
    <style name="Theme.Rally" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/green_active</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/gray_200</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">#343434</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="buttonStyle">@style/FlatButton</item>
        <item name="elevationOverlayEnabled">false</item>
    </style>
    <style name="Text" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">#343434</item>
        <item name="android:fontFamily">@font/pretendard_medium</item>
    </style>
    <style name="TextAppearance.Title" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#343434</item>
        <item name="android:fontFamily">@font/pretendard_semibold</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextAppearance.Body" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:textColor">#525252</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="MyCustomRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@null</item>
        <item name="android:drawableEnd">@drawable/custom_radio_button</item>
        <item name="android:textColor">#676769</item>
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/bg_selector_radio_button</item>
    </style>
    <style name="FlatButton" parent="Widget.AppCompat.Button">
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lineHeight">27sp</item>
    </style>
    <style name="MyGreenButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/green_active</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="NavText" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/pretendard_medium</item>
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="MatchTabText" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/pretendard_semibold</item>
        <item name="android:fontFamily">@font/pretendard_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="InvitationTabText" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/pretendard_semibold</item>
        <item name="android:fontFamily">@font/pretendard_semibold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>
    <!-- 팝업 전용 테마 정의 -->
    <style name="PopupTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="materialButtonStyle">@style/MyGreenButton</item>
    </style>
    <style name="RoundedProfileImage27dp">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">27dp</item>
    </style>
    <style name="RoundedProfileImage24dp">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>
    <style name="RoundedProfileImage20dp">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>
    <style name="RoundedProfileImage12dp">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>
    <style name="RoundedProfileImage10dp">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="RoundedChatProfileImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="fontFamily">@font/pretendard_medium</item>
        <item name="android:textColor">@color/gray_800</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CalenderDayViewCustom" parent="Theme.AppCompat">
        <item name="fontFamily">@font/pretendard_medium</item>
        <item name="android:textColor">@color/gray_800</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>