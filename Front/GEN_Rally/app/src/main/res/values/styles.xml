<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 전체 앱 테마 -->
    <style name="Theme.Rally" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:fontFamily">@font/pretendard_variable</item>

        <item name="colorPrimary">@color/green_active</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/gray_inactive</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">#343434</item>
    </style>
    <style name="TextAppearance.Title" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textColor">#343434</item>
        <item name="android:fontFamily">@font/pretendard_variable</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextAppearance.Body" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">@font/pretendard_variable</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="MyCustomRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@drawable/custom_radio_button</item>
        <item name="android:textColor">#676769</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/bg_selector_radio_button</item>
    </style>
    <style name="FlatButton" parent="Widget.AppCompat.Button">
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
</resources>